generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin{
  id String @id @default(uuid())
  name String 
  email String
  password String

  @@map("admins")
}

model operador{
  id String @id @default(uuid())
  name String 
  email String
  telefone String 
  morada String
  cargoId String 

  @@map("operadores")
}
model cargo{
  id String @id @default(uuid())
  nome String

  @@map("cargos")
}

model stock{
  id String @id @default(uuid())
  idProducto String
  quantidade Float

  @@map("stocks")
}

model categoria{
  id String @id @default(uuid())
  nome String

  @@map("categorias")
}
 
model producto{
  id String @id @default(uuid())
  nome String
  descricao String
  preco Float
  idCategoria String

  @@map("productos")
}

model menu{
  id String @id @default(uuid())
  nome String
  idProducto String

  @@map("menus")
}

model pedido{
  id String @id @default(uuid())
  status String
  description String
  localizacao String
  email String
  idProducto String
  idMenu String

  @@map("pedidos")
}